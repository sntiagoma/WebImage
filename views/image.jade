extends layout

block content
  .container
    .row
      .col.s12.m6
        .card.white
          .card-content
            span.card-title
              | #{image.originalname} (#{image.mimetype})
            p
              | Date: #{image.date}
          .card-action.center
            a.waves-effect.waves-light.btn-large(href="/nfs1/#{image.filename}",download="#{image.originalname}",onerror="this.onerror=null;this.href="/nfs2/#{image.filename}")
              i.material-icons.left play_for_work
              | Download
      .col.s12.m6
        .card.white
          .card-content
            .row.center
              img(src="/nfs1/#{image.filename}",width="400px",onerror="this.onerror=null;this.src="/nfs2/#{image.filename}").materialboxed
